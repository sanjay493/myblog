<!doctype html>
<html lang="en">
  <head>
    
<% include partials/head.ejs %>

    <title><%= title %></title>
  </head>
  <body>
  <% include partials/header.ejs %>

  <div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (news) { %>
        <form class="add-news-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="headline">Headline</label>
                    <input type="text" class="form-control" name="headline" id="headline" value="<%= news.headline %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="para1">Para 1</label>
                    <input type="text" class="form-control" name="para1" id="para1" value="<%= news.para1 %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="news_date">News Date</label>
                    <input type="text" class="form-control" name="news_date" id="news_date" value="<%= news.news_date %>" required>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update News</button>
        </form>
    <% } else { %>
        <p class="text-center">News Not Found. Go <a href="/add">here</a> to add news.</p>
    <% } %>
</div>
           
           
           
           
           
            
<% include partials/footer.ejs %>
<% include partials/script.ejs %>
 </body>
</html>